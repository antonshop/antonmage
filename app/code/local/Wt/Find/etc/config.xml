    <global>
        <models>
            <find>
                <class>Wt_Find_Model</class>
                <resourceModel>find_mysql4</resourceModel>
            </find>
            <find_mysql4>
                <class>Wt_Find_Model_Mysql4</class>
                <entities>
                    <find>
                        <table>find</table>
                    </find>
                </entities>
            </find_mysql4>
        </models>
        <resources>
            <find_setup>
                <setup>
                    <module>Wt_Find</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </find_setup>
            <find_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </find_write>
            <find_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </find_read>
        </resources>
        <blocks>
            <find>
                <class>Wt_Find_Block</class>
            </find>
        </blocks>
        <helpers>
            <find>
                <class>Wt_Find_Helper</class>
            </find>
        </helpers>

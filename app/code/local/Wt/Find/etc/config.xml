<?xml version="1.0"?>
<config>
    <modules>
        <Wt_Find>
            <version>0.1.0</version>
        </Wt_Find>
    </modules>
    <frontend>
        <routers>
            <find>
                <use>standard</use>
                <args>
                    <module>Wt_Find</module>
                    <frontName>find</frontName>
                </args>
            </find>
        </routers>
        <layout>
            <updates>
                <find>
                    <file>find.xml</file>
                </find>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<find>
				<use>admin</use>
				<args>
					<module>Wt_Find</module>
					<frontName>find</frontName>
				</args>
			</find>
        </routers>
    </admin>

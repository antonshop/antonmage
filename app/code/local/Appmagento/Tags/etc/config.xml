<?xml version="1.0"?>
<config>
    <modules>
        <Appmagento_Tags>
            <version>0.1.0</version>
        </Appmagento_Tags>
    </modules>
    <frontend>
        <routers>
            <tags>
                <use>standard</use>
                <args>
                    <module>Appmagento_Tags</module>
                    <frontName>tags</frontName>
                </args>
            </tags>
        </routers>
        <layout>
            <updates>
                <tags>
                    <file>tags.xml</file>
                </tags>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<tags>
				<use>admin</use>
				<args>
					<module>Appmagento_Tags</module>
					<frontName>tags</frontName>
				</args>
			</tags>
        </routers>
    </admin>

                <class>Appmagento_Tags_Model_Mysql4</class>
                <entities>
                    <tags>
                        <table>tags</table>
                    </tags>
                </entities>
            </tags_mysql4>
        </models>
        <resources>
            <tags_setup>
                <setup>
                    <module>Appmagento_Tags</module>
                </setup>
